<?xml version="1.0" encoding="utf-8"?>

<org.dandelion.radiot.live.ui.FixedViewFlipper
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/flipper"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inAnimation="@anim/slide_in_up"
    android:outAnimation="@anim/slide_out_up"
    android:background="@color/background_darkest">

    <org.dandelion.radiot.live.ui.PlaybackControlView
        android:id="@+id/playback_control"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>

    <TextView
        android:id="@+id/live_hint_label"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="@string/live_show_info"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:gravity="center"/>
</org.dandelion.radiot.live.ui.FixedViewFlipper>
