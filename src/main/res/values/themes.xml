<resources>
    <style name="Radiot.Button"
           parent="@android:style/Widget.Holo.Button.Borderless">
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="Radiot.ImageButton"
           parent="@android:style/Widget.Holo.ImageButton">
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>


    <style name="Theme.Radiot" parent="Theme.AppCompat">
        <item name="buttonStyle">@style/Radiot.Button</item>

        <item name="android:textViewStyle">@style/Radiot.TextView</item>
        <item name="android:imageButtonStyle">@style/Radiot.ImageButton</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:windowContentOverlay">@drawable/titlebar_shadow</item>
    </style>

    <style name="Theme.RadiotHome" parent="Theme.Radiot">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>